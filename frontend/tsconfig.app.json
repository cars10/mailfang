{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "types": ["vite/client", "@vueuse/core"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@vueuse/core": ["./node_modules/@vueuse/core/index.d.ts"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
